<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    
    <item >
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    
     <item >
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="#2352a1" />
            <corners android:radius="@dimen/day_event_little_radius" />
        </shape>
    </item>

    <item android:left="0.5dp" android:top="0.5dp" android:right="0.5dp" android:bottom="0.5dp">
        <shape android:shape="rectangle" >
			<gradient android:startColor="#2c73dc" android:endColor="#2964c8"/>
            <corners android:radius="@dimen/day_event_little_radius" />
        </shape>
    </item>
    
    
    <item android:top="@dimen/day_event_little_title_height" android:left="0.5dp" android:right="0.5dp" android:bottom="0.5dp">
        <shape android:shape="rectangle" >
            <solid android:color="#6a99e1" />

            <corners android:radius="@dimen/day_event_little_radius" />

        </shape>
    </item>

</layer-list>