<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item android:id="@+id/drawable_day_event_little_border">
        <shape android:shape="rectangle" >
            <stroke
                android:width="0.5dp"
                android:color="#2352a1" />

            <corners android:radius="@dimen/day_event_little_radius" />
        </shape>
    </item>
    <item
        android:id="@+id/drawable_day_event_little_top"
        android:bottom="0.5dp"
        android:left="0.5dp"
        android:right="0.5dp"
        android:top="0.5dp">
        <shape android:shape="rectangle" >
            <gradient
                android:endColor="#2964c8"
                android:startColor="#2c73dc" />

            <corners android:radius="@dimen/day_event_little_radius" />
        </shape>
    </item>
    <item
        android:id="@+id/drawable_day_event_little_content"
        android:bottom="0.5dp"
        android:left="0.5dp"
        android:right="0.5dp"
        android:top="@dimen/day_event_little_title_height">
        <shape android:shape="rectangle" >
            <solid android:color="#6a99e1" />

            <corners android:radius="@dimen/day_event_little_radius" />
        </shape>
    </item>

</layer-list>