<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="its.my.time"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="9" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="its.my.time.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.USE_SIP" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.sip.voip"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.microphone"
        android:required="true" />

    <permission
        android:name="its.my.time.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <permission
        android:name="com.vogella.android.locationapi.maps.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppTheme" >
        <receiver
            android:name="its.my.time.receivers.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="its.my.time" />
            </intent-filter>
        </receiver>
        <receiver android:name="its.my.time.BootStarter" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="its.my.time.receivers.IncomingCallReceiver"
            android:label="Call Receiver" />

        <service
            android:name="its.my.time.data.account.ContactsSyncAdapterService"
            android:exported="true"
            android:process=":contacts" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/sync_contacts" />
            <meta-data
                android:name="android.provider.CONTACTS_STRUCTURE"
                android:resource="@xml/contacts" />
        </service>
        <service
            android:name="its.my.time.data.account.AccountAuthenticatorService"
            android:exported="false"
            android:process=":auth" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>
        <service android:name="its.my.time.receivers.GCMIntentService" />

        <activity
            android:name="its.my.time.SplashActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="its.my.time.pages.editable.profil.ProfilActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" android:screenOrientation="portrait"  >
        </activity>
        <activity
            android:name="its.my.time.pages.editable.comptes.ComptesActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" android:screenOrientation="portrait"  >
        </activity>
        <activity
            android:name="its.my.time.pages.editable.comptes.compte.CompteActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" android:screenOrientation="portrait"  >
        </activity>
        <activity
            android:name="its.my.time.pages.calendar.CalendarActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" android:screenOrientation="portrait"  >
        </activity>
        <activity
            android:name="its.my.time.pages.editable.events.event.EventActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"  android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="its.my.time.pages.editable.events.meeting.MeetingActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" android:screenOrientation="portrait"  >
        </activity>
        <activity
            android:name="its.my.time.pages.editable.events.task.TaskActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" android:screenOrientation="portrait"  >
        </activity>
        <activity
            android:name="its.my.time.pages.editable.events.call.CallActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"  android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="its.my.time.data.ws.PrepareRequestTokenActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"  android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="callback"
                    android:scheme="mytime" />
            </intent-filter>
        </activity>
        <activity
            android:name="its.my.time.data.ws.OAuthFlowApp"
            android:configChanges="orientation|keyboardHidden"
            android:label="Test oAuth"
            android:screenOrientation="portrait" />
        <activity
            android:name="its.my.time.receivers.ValidateParticipationActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog"  android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="its.my.time.pages.AboutActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog"  android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="its.my.time.pages.settings.SettingsActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="its.my.time.pages.reporting.ReportingActivity"
            android:label="Reporting" 
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name="its.my.time.pages.call.IncomingCallActivity"
            android:label="@string/app_name" android:screenOrientation="portrait"  >
        </activity>
        <activity
            android:name="its.my.time.pages.call.OnCallActivity"
            android:label="@string/app_name" android:screenOrientation="portrait"  >
        </activity>
        
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDlU0Wn35JBR8d9zMF7CSVXIjvvHnuL45A" />
    </application>

</manifest>