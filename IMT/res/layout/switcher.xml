<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/switcher_showed_width"
    android:layout_height="40dp" >

    <RelativeLayout
        android:id="@+id/switcher_main"
        android:layout_width="@dimen/switcher_total_width"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/switcher_text_on"
            style="@style/switcher_item_on"
            android:layout_width="@dimen/switcher_item_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="2dp"
            android:text="ON" />

        <TextView
            android:id="@+id/switcher_text_off"
            style="@style/switcher_item_off"
            android:layout_width="@dimen/switcher_item_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="right|center_vertical"
            android:paddingRight="2dp"
            android:text="OFF" />

        <TextView
            android:id="@+id/switcher_grabber"
            style="@style/switcher_grabber"
            android:layout_width="@dimen/switcher_item_half_width"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="|||"
            android:textSize="10dp" />
    </RelativeLayout>

</FrameLayout>