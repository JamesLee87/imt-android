<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_height_large" >

    <TextView
        android:id="@+id/event_pj_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/event_pj_name"
        android:background="@color/grey"
        android:text="Titre de la prochaine Pièce Jointe"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black" >
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_pj_name"
        android:layout_toLeftOf="@+id/delete"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/event_pj_icone"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="Image Profil"
            android:src="@drawable/ic_action_profil_black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/event_pj_icone" >

            <TextView
                android:id="@+id/event_pj_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/event_pj_icone"
                android:text="Jean Louis"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/event_pj_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_pj_owner"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/event_pj_icone"
                android:text="Mard 17 octobre 2012 à 18h30"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/event_pj_bouton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@android:drawable/stat_sys_download"
                android:contentDescription="Download" />
        </RelativeLayout>
    </RelativeLayout>

    <com.fonts.mooncake.MooncakeIcone
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/event_pj_name"
        android:background="@color/white"
        android:gravity="center"
        android:paddingRight="6dp"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_medium" />

</RelativeLayout>