<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:background="@drawable/border_gray"
    android:padding="2dp" >

    <RelativeLayout
        android:id="@+id/activity_calendar_month_day_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="2dp" >

        <TextView
            android:id="@+id/activity_calendar_month_day_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/rounded_red"
            android:gravity="bottom|left"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textSize="10sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/activity_calendar_month_day_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/activity_calendar_month_day_plus"
            android:gravity="center_vertical|right"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/page_month_day_text_color" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/activity_calendar_month_day_liste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/activity_calendar_month_day_first"
        android:dividerPadding="5dp"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>