        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="TESTESTESTESTCGHjbxwv,;cx,; :x,cvn bx,;cvx;:bncv,"
