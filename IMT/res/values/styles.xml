<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Btn" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Btn.Default" parent="@style/Btn">
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="Btn.Green" parent="@style/Btn">
        <item name="android:background">@drawable/btn_green</item>
    </style>

    <style name="Btn.Red" parent="@style/Btn">
        <item name="android:background">@drawable/btn_red</item>
    </style>

    <style name="Btn.Yellow" parent="@style/Btn">
        <item name="android:background">@drawable/btn_green</item>
    </style>

    <style name="champs_texte" parent="android:Widget.EditText">
        <item name="android:gravity">top</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:background">@drawable/champs_texte</item>
    </style>

</resources>