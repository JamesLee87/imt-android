<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".DemoActivity" >

    <fr.adrienhugon.richedit.CustomEditText
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/controls"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine" >

        <requestFocus />
    </fr.adrienhugon.richedit.CustomEditText>

    <HorizontalScrollView
        android:id="@+id/controls"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="2dp"
        android:paddingTop="2dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp">

            <Spinner
                android:id="@+id/font"
                style="@style/Spinner"
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:background="@drawable/normal"
                android:dropDownVerticalOffset="1dp"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/size"
                style="@style/Spinner"
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:background="@drawable/normal"
                android:dropDownVerticalOffset="1dp"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:spinnerMode="dropdown" />

            <ImageButton
                android:id="@+id/bold"
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:background="@android:color/transparent"
                android:contentDescription="Bold"
                android:scaleType="centerInside"
                android:src="@drawable/bold" />

            <ImageButton
                android:id="@+id/italic"
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:background="@android:color/transparent"
                android:contentDescription="Italic"
                android:scaleType="centerInside"
                android:src="@drawable/italic" />

            <ImageButton
                android:id="@+id/underline"
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:background="@android:color/transparent"
                android:contentDescription="Underline"
                android:scaleType="centerInside"
                android:src="@drawable/underline" />

            <Spinner
                android:id="@+id/color"
                style="@style/Spinner"
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:dropDownVerticalOffset="1dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/normal"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:spinnerMode="dropdown" />

            <ImageButton
                android:id="@+id/ol"
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:background="@android:color/transparent"
                android:contentDescription="Ol"
                android:scaleType="centerInside"
                android:src="@drawable/ol" />

            <ImageButton
                android:id="@+id/ul"
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:background="@android:color/transparent"
                android:contentDescription="Ul"
                android:scaleType="centerInside"
                android:src="@drawable/ul" />

            <Spinner
                android:id="@+id/gravity"
                style="@style/Spinner"
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="2dp"
                android:dropDownVerticalOffset="1dp"
                android:background="@drawable/normal"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>